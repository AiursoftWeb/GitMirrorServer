@model Aiursoft.GitMirrorServer.Models.DashboardViewModels.IndexViewModel
@inject IViewLocalizer Localizer

@{
    ViewData["Title"] = Localizer["Dashboard"];
}

<div class="container-fluid p-0">
    <div class="row mb-2 mb-xl-3">
        <div class="col-auto d-none d-sm-block">
            <h3>@Localizer["Dashboard"]</h3>
        </div>
    </div>

    <div class="row">
        <div class="col-sm-6 col-xl-3">
            <div class="card shadow-sm h-100">
                <div class="card-body">
                    <div class="row">
                        <div class="col mt-0">
                            <h5 class="card-title">@Localizer["Total Mirrors"]</h5>
                        </div>
                        <div class="col-auto">
                            <div class="stat text-primary">
                                <i class="align-middle" data-lucide="git-merge"></i>
                            </div>
                        </div>
                    </div>
                    <h1 class="mt-1 mb-3">@Model.TotalMirrors</h1>
                    <div class="mb-0">
                        <span class="text-muted">@Localizer["Configured repositories"]</span>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-sm-6 col-xl-3">
            <div class="card shadow-sm h-100">
                <div class="card-body">
                    <div class="row">
                        <div class="col mt-0">
                            <h5 class="card-title">@Localizer["Total Executions"]</h5>
                        </div>
                        <div class="col-auto">
                            <div class="stat text-primary">
                                <i class="align-middle" data-lucide="history"></i>
                            </div>
                        </div>
                    </div>
                    <h1 class="mt-1 mb-3">@Model.TotalHistoryCount</h1>
                    <div class="mb-0">
                        <span class="text-muted">@Localizer["Lifetime job runs"]</span>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-sm-6 col-xl-3">
            <div class="card shadow-sm h-100">
                <div class="card-body">
                    <div class="row">
                        <div class="col mt-0">
                            <h5 class="card-title">@Localizer["Last Run Success"]</h5>
                        </div>
                        <div class="col-auto">
                            <div class="stat text-success">
                                <i class="align-middle" data-lucide="check-circle"></i>
                            </div>
                        </div>
                    </div>
                    <h1 class="mt-1 mb-3">@Model.LastRunSuccessCount</h1>
                    <div class="mb-0">
                        <span class="text-muted">@Localizer["Repos synced successfully"]</span>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-sm-6 col-xl-3">
            <div class="card shadow-sm h-100">
                <div class="card-body">
                    <div class="row">
                        <div class="col mt-0">
                            <h5 class="card-title">@Localizer["Last Run Failures"]</h5>
                        </div>
                        <div class="col-auto">
                            <div class="stat text-danger">
                                <i class="align-middle" data-lucide="alert-circle"></i>
                            </div>
                        </div>
                    </div>
                    <h1 class="mt-1 mb-3">@Model.LastRunFailureCount</h1>
                    <div class="mb-0">
                        <span class="text-muted">@Localizer["Repos failed to sync"]</span>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row mt-4">
        <div class="col-12 col-lg-8">
            <div class="card shadow-sm">
                <div class="card-header">
                    <h5 class="card-title mb-0">@Localizer["System Status"]</h5>
                </div>
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-3">@Localizer["Last Run Time"]</dt>
                        <dd class="col-sm-9">
                            @if (Model.LastRunTime.HasValue)
                            {
                                @Model.LastRunTime.Value.ToLocalTime()
                            }
                            else
                            {
                                <span class="text-muted">@Localizer["Never"]</span>
                            }
                        </dd>

                        <dt class="col-sm-3">@Localizer["Last Run Duration"]</dt>
                        <dd class="col-sm-9">
                            @if (Model.LastRunDuration.HasValue)
                            {
                                @Model.LastRunDuration.Value.ToString(@"hh\:mm\:ss")
                            }
                            else
                            {
                                <span class="text-muted">-</span>
                            }
                        </dd>
                        
                        <dt class="col-sm-3">@Localizer["App Uptime"]</dt>
                        <dd class="col-sm-9">
                            @((DateTime.UtcNow - System.Diagnostics.Process.GetCurrentProcess().StartTime.ToUniversalTime()).ToString(@"dd\.hh\:mm\:ss"))
                        </dd>
                    </dl>
                </div>
            </div>
        </div>
        <div class="col-12 col-lg-4">
            <div class="card shadow-sm">
                <div class="card-header">
                    <h5 class="card-title mb-0">@Localizer["Quick Actions"]</h5>
                </div>
                <div class="card-body">
                    <div class="d-grid gap-2">
                        <a asp-controller="Mirrors" asp-action="Index" class="btn btn-primary">
                            <i class="align-middle" data-lucide="list"></i> @Localizer["Manage Mirrors"]
                        </a>
                        <a asp-controller="History" asp-action="Index" class="btn btn-outline-secondary">
                            <i class="align-middle" data-lucide="clock"></i> @Localizer["View History"]
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>