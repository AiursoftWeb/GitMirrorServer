@* ReSharper disable once Razor.SectionNotResolved *@
@section styles {
    <link rel="stylesheet" href="~/styles/site.css" xmlns="http://www.w3.org/1999/html"/>
}

<vc:marketing-navbar></vc:marketing-navbar>

<section class="landing-intro text-bg-dark pt-5 pt-lg-6 pb-5 pb-lg-7">
    <div class="landing-intro-content container h-100">
        <div class="row align-items-center h-100">
            <div class="col-lg-6 mx-auto">
                <span class="badge badge-subtle-primary p-1">@Localizer["Open Source"]</span>
                <span class="badge badge-subtle-primary p-1">@Localizer["Automated"]</span>
                <h1 id="main-slogan" class="my-4 text-white" style="font-size: 3rem;">
                    @Localizer["Git Repository"] <span class='text-primary'>@Localizer["Mirroring"]</span> @Localizer["Made Simple"]
                </h1>
                <p class="text-lg text-white-50">
                    @Localizer["Automatically mirror your Git repositories between GitHub, GitLab, and other providers."]
                    @Localizer["Secure, reliable, and fully automated."]
                </p>
                <div class="my-4">
                    <a asp-controller="Account" asp-action="Login" class="btn btn-primary btn-lg btn-pill">
                        <i class="align-middle" data-lucide="log-in"></i> @Localizer["Get Started"]
                    </a>
                    <a href="https://github.com/aiursoftweb/gitmirrorserver" target="_blank" class="btn btn-outline-light btn-lg btn-pill">
                        <i class="align-middle" data-lucide="github"></i> @Localizer["View on GitHub"]
                    </a>
                </div>
            </div>
            <div class="col-lg-6 d-none d-lg-flex mx-auto text-center">
                <div class="landing-intro-screenshot shadow-lg rounded">
                    <!-- You might want to update this screenshot with a real one from the app later -->
                    <img src="~/images/screenshot.png" alt="GitMirrorServer Dashboard" class="img-fluid rounded" />
                </div>
            </div>
        </div>
    </div>
</section>

<section class="py-6">
    <div class="container">
        <div class="mb-5 text-center">
            <span class="text-uppercase text-primary text-sm fw-medium mb-1 d-block">@Localizer["Features"]</span>
            <h2 class="h1">@Localizer["Why GitMirrorServer?"]</h2>
            <p class="text-muted fs-lg">@Localizer["A powerful tool to keep your repositories in sync across platforms."]</p>
        </div>

        <div class="row">
            <div class="col-12 col-md-6 col-lg-4 d-flex">
                <div class="d-flex align-items-start py-3">
                    <div class="landing-feature text-primary">
                        <i data-lucide="repeat"></i>
                    </div>
                    <div class="flex-grow-1 ms-3">
                        <h4 class="mt-0">@Localizer["Automated Sync"]</h4>
                        <p class="fs-lg">@Localizer["Configure your mirrors once, and let the server handle the rest. Runs automatically on a schedule you define."]</p>
                    </div>
                </div>
            </div>
            <div class="col-12 col-md-6 col-lg-4 d-flex">
                <div class="d-flex align-items-start py-3">
                    <div class="landing-feature text-primary">
                        <i data-lucide="git-branch"></i>
                    </div>
                    <div class="flex-grow-1 ms-3">
                        <h4 class="mt-0">@Localizer["Universal Compatibility"]</h4>
                        <p class="fs-lg">@Localizer["Supports mirroring between GitHub, GitLab, and any standard Git server. Handles branches, tags, and commits."]</p>
                    </div>
                </div>
            </div>
            <div class="col-12 col-md-6 col-lg-4 d-flex">
                <div class="d-flex align-items-start py-3">
                    <div class="landing-feature text-primary">
                        <i data-lucide="history"></i>
                    </div>
                    <div class="flex-grow-1 ms-3">
                        <h4 class="mt-0">@Localizer["Detailed History"]</h4>
                        <p class="fs-lg">@Localizer["Track every synchronization job. View success/failure status and detailed logs for every repository."]</p>
                    </div>
                </div>
            </div>
            <div class="col-12 col-md-6 col-lg-4 d-flex">
                <div class="d-flex align-items-start py-3">
                    <div class="landing-feature text-primary">
                        <i data-lucide="shield"></i>
                    </div>
                    <div class="flex-grow-1 ms-3">
                        <h4 class="mt-0">@Localizer["Secure Access"]</h4>
                        <p class="fs-lg">@Localizer["Manage access tokens securely. Supports private repositories and organizations."]</p>
                    </div>
                </div>
            </div>
            <div class="col-12 col-md-6 col-lg-4 d-flex">
                <div class="d-flex align-items-start py-3">
                    <div class="landing-feature text-primary">
                        <i data-lucide="sliders"></i>
                    </div>
                    <div class="flex-grow-1 ms-3">
                        <h4 class="mt-0">@Localizer["Flexible Configuration"]</h4>
                        <p class="fs-lg">@Localizer["Mirror entire organizations or specific users. Configure intervals and storage paths easily."]</p>
                    </div>
                </div>
            </div>
            <div class="col-12 col-md-6 col-lg-4 d-flex">
                <div class="d-flex align-items-start py-3">
                    <div class="landing-feature text-primary">
                        <i data-lucide="activity"></i>
                    </div>
                    <div class="flex-grow-1 ms-3">
                        <h4 class="mt-0">@Localizer["Real-time Status"]</h4>
                        <p class="fs-lg">@Localizer["Monitor your mirror status with a comprehensive dashboard. See what's running, what failed, and why."]</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<section class="py-6 bg-light">
    <div class="container text-center">
        <div class="row">
            <div class="col-12 col-md-10 col-lg-9 col-xl-8 mx-auto">
                <h2 class="h1 mb-3">
                    @Localizer["Ready to secure your code?"]
                </h2>
                <p class="lead mb-4">
                    @Localizer["Start mirroring your repositories today and ensure your code is always backed up and accessible."]
                </p>
                <a asp-controller="Account" asp-action="Register" class="align-middle btn btn-primary btn-pill btn-lg mt-n1">
                    <i class="align-middle" data-lucide="user-plus"></i>
                    <span class="ms-1">@Localizer["Create an Account"]</span>
                </a>
            </div>
        </div>
    </div>
</section>

<vc:marketing-footer></vc:marketing-footer>